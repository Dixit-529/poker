# Makefile                                                                                                                                                                                                                                                                                                                                      # Compiler                                                                                                                                                              CC = gcc                                                                                                                                                                                                                                                                                                                                        # Compiler flags                                                                                                                                                        CFLAGS = -Wall -g                                                                                                                                                                                                                                                                                                                               # Source files                                                                                                                                                          SRC = main.c addition.c multiplication.c subtraction.c                                                                                                                                                                                                                                                                                          # Object files                                                                                                                                                          OBJ = $(SRC:.c=.o)                                                                                                                                                                                                                                                                                                                              # Executable name                                                                                                                                                       TARGET = calc                                                                                                                                                                                                                                                                                                                                   # Rule to build the executable                                                                                                                                          $(TARGET): $(OBJ)                                                                                                                                                               $(CC) $(CFLAGS) -o $@ $^                                                                                                                                                                                                                                                                                                                # Rule to build object files                                                                                                                                            %.o: %.c                                                                                                                                                                        $(CC) $(CFLAGS) -c -o $@ $<                                                                                                                                                                                                                                                                                                             # Clean rule                                                                                                                                                            clean:                                                                                                                                                                          rm -f $(OBJ) $(TARGET)
